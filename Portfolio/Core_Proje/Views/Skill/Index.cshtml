@using EntityLayer.Concrete
@model List<Skill>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header border-0">
                <h3 class="mb-0">Yetenek Listesi Tablosu</h3>
            </div>
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>
                            <th scope="col" class="sort" data-sort="status">Oran</th>
                            <th scope="col" class="sort" data-sort="completion"></th>
                            <th scope="col" class="sort" data-sort="completion"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            string[] renkler = { "blue", "cyan", "danger", "dark", "gray", "gray-dark", "green", "indigo", "info", "light", "orange", "pink", "primary", "purple", "red", "success", "teal", "warning", "yellow" };

                            Random random = new Random();
                            int rastgeleIndis = random.Next(0, renkler.Length);
                            int rastgeleIndis1 = random.Next(0, renkler.Length);
                            string rastgeleDeger = renkler[rastgeleIndis];
                            string rastgeleDeger1 = renkler[rastgeleIndis1];

                            <tr>
                                <td>
                                    <span class="badge badge-dot mr-4">
                                        <i class="bg-@rastgeleDeger"></i>
                                        <span class="status">@item.Title</span>
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="completion mr-2">@item.Value%</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-@rastgeleDeger1" role="progressbar" aria-valuenow="@item.Value%" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Skill/EditSkill/@item.SkillID" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Skill/AddSkill" class="btn btn-outline-primary col-12">Yeni Yetenek Ekle</a>
            </div>
        </div>
    </div>
</div>